NODE_ENV=development
PORT=3000

# AI/LLM API Keys
DEEPINFRA_API_KEY=your_deepinfra_key_here

# Database Configuration
# We use direct PostgreSQL connection (not Supabase JS client) for pgvector support

# Option 1: Supabase (Recommended for production)
# Get this from: Supabase Dashboard → Settings → Database → Connection String → URI
# Format: postgresql://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:5432/postgres
# DATABASE_URL=postgresql://postgres.xxxxxxxxxxxx:your-password@aws-0-us-east-1.pooler.supabase.com:5432/postgres

# Option 2: Local PostgreSQL 16 (Recommended for development)
DATABASE_URL=postgresql://community_user:dev_password_123@localhost:5432/community_connect

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_TLS=false

# Rate Limiting Configuration
RATE_LIMIT_MESSAGES_PER_HOUR=50
RATE_LIMIT_SEARCHES_PER_HOUR=30