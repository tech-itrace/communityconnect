NODE_ENV=development
PORT=3000

# AI/LLM Configuration
# Primary and fallback LLM providers: 'deepinfra' or 'google_gemini'
LLM_PROVIDER_PRIMARY=deepinfra
LLM_PROVIDER_FALLBACK=google_gemini

# LLM Retry Configuration (for handling rate limits)
# Set LLM_ENABLE_RETRY_BACKOFF=false to disable exponential backoff during tests
LLM_ENABLE_RETRY_BACKOFF=true  # Enable exponential backoff (1s, 2s, 4s...)
LLM_RETRY_DELAY_MS=1000         # Base delay in ms (use 100 for fast tests)
LLM_MAX_RETRIES=3               # Maximum retry attempts

# DeepInfra API Key (for Llama 3.1 8B)
DEEPINFRA_API_KEY=your_deepinfra_key_here

# Google API Key (for Gemini 2.0 Flash Experimental - fallback)
# Get from: https://makersuite.google.com/app/apikey
# Requires: Generative Language API enabled + billing setup
GOOGLE_API_KEY=your_google_api_key_here

# Database Configuration
# We use direct PostgreSQL connection (not Supabase JS client) for pgvector support

# Option 1: Supabase (Recommended for production)
# Get this from: Supabase Dashboard → Settings → Database → Connection String → URI
# Format: postgresql://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:5432/postgres
# DATABASE_URL=postgresql://postgres.xxxxxxxxxxxx:your-password@aws-0-us-east-1.pooler.supabase.com:5432/postgres

# Option 2: Local PostgreSQL 16 (Recommended for development)
DATABASE_URL=postgresql://community_user:dev_password_123@localhost:5432/community_connect

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_TLS=false

# Rate Limiting Configuration
RATE_LIMIT_MESSAGES_PER_HOUR=50
RATE_LIMIT_SEARCHES_PER_HOUR=30

# Feature Flags
# SKIP_AUTHENTICATION: Set to 'true' to bypass authentication for testing/development
# WARNING: NEVER enable this in production! Only for local testing with Postman/API clients
SKIP_AUTHENTICATION=false

# DEFAULT_TEST_ROLE: Role to use when SKIP_AUTHENTICATION is enabled
# Options: 'member', 'admin', 'super_admin'
DEFAULT_TEST_ROLE=super_admin