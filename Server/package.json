{
    "name": "community-connect-server",
    "version": "0.1.0",
    "description": "Express.js REST API for WhatsApp bot (Slice 1)",
    "main": "dist/server.js",
    "scripts": {
        "dev": "ts-node-dev src/server.ts",
        "build": "tsc",
        "start": "node dist/server.js",
        "test": "jest",
        "test:whatsapp": "./test-whatsapp-local.sh",
        "test:redis": "ts-node -r dotenv/config src/test-redis.ts",
        "test:session": "ts-node -r dotenv/config src/test-session.ts",
        "test:ratelimit": "ts-node -r dotenv/config src/test-ratelimit.ts",
        "test:rbac": "ts-node -r dotenv/config src/test-rbac.ts",
        "test:audit": "ts-node -r dotenv/config src/test-audit.ts",
        "test:pipeline": "jest fullPipeline.test.ts --verbose --maxWorkers=1",
        "check:env": "./check-environment.sh",
        "db:fresh": "ts-node -r dotenv/config src/scripts/freshSetup.ts",
        "db:setup": "ts-node -r dotenv/config src/scripts/setupDatabase.ts",
        "db:add-roles": "ts-node -r dotenv/config src/scripts/addRoleColumn.ts",
        "db:create-audit": "ts-node -r dotenv/config src/scripts/createAuditTable.ts",
        "import:members": "ts-node -r dotenv/config src/scripts/importMembers.ts",
        "import:members:multi": "ts-node -r dotenv/config src/scripts/importMembersMultiCommunity.ts",
        "import:members:lean": "ts-node -r dotenv/config src/scripts/importMembersLeanSchema.ts",
        "generate:embeddings": "ts-node -r dotenv/config src/scripts/generateEmbeddings.ts",
        "generate:embeddings:lean": "ts-node -r dotenv/config src/scripts/generateEmbeddingsLeanSchema.ts",
        "migrate:memberships": "ts-node -r dotenv/config src/scripts/migrateMembersToMultiCommunity.ts",
        "generate:contextual-embeddings": "ts-node -r dotenv/config src/scripts/generateContextualEmbeddings.ts",
        "migrate:lean": "ts-node -r dotenv/config src/scripts/runLeanMigration.ts",
        "migrate:validate": "ts-node -r dotenv/config src/scripts/runLeanMigration.ts validate",
        "migrate:drop-old-tables": "ts-node -r dotenv/config src/scripts/runLeanMigration.ts drop",
        "migrate:rollback": "ts-node -r dotenv/config src/scripts/runLeanMigration.ts rollback"
    },
    "author": "tech-itrace",
    "license": "MIT",
    "dependencies": {
        "@google/generative-ai": "^0.24.1",
        "ajv": "^8.17.1",
        "axios": "^1.6.0",
        "cors": "^2.8.5",
        "csv-parse": "^5.5.2",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "multer": "^2.0.2",
        "pg": "^8.11.3",
        "redis": "^5.8.3",
        "uuid": "^9.0.1"
    },
    "devDependencies": {
        "@types/ajv": "^0.0.5",
        "@types/cors": "^2.8.19",
        "@types/express": "^4.17.23",
        "@types/jest": "^29.5.14",
        "@types/multer": "^2.0.0",
        "@types/node": "^20.19.22",
        "@types/pg": "^8.10.0",
        "@types/redis": "^4.0.10",
        "@types/supertest": "^6.0.3",
        "@types/uuid": "^9.0.7",
        "jest": "^29.7.0",
        "supertest": "^7.1.4",
        "ts-jest": "^29.4.5",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.2.2"
    }
}