# Test Environment Configuration
# Copy this to .env.test for fast test execution

NODE_ENV=test
PORT=3000

# AI/LLM Configuration
LLM_PROVIDER_PRIMARY=deepinfra
LLM_PROVIDER_FALLBACK=google_gemini

# LLM Retry Configuration - OPTIMIZED FOR FAST TESTS
LLM_ENABLE_RETRY_BACKOFF=false  # Disable exponential backoff for faster tests
LLM_RETRY_DELAY_MS=100          # Minimal delay (100ms instead of 1s)
LLM_MAX_RETRIES=1               # Fewer retries to fail fast

# API Keys (use your actual keys)
DEEPINFRA_API_KEY=your_deepinfra_key_here
GOOGLE_API_KEY=your_google_api_key_here

# Database Configuration
DATABASE_URL=postgresql://community_user:dev_password_123@localhost:5432/community_connect_test

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_TLS=false

# Rate Limiting (more lenient for tests)
RATE_LIMIT_MESSAGES_PER_HOUR=1000
RATE_LIMIT_SEARCHES_PER_HOUR=1000
